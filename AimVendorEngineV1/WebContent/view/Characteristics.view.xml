<mvc:View controllerName="sap.ui.medApp.view.Characteristics"
	displayBlock="true" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<Page id="vendorchar" title="{i18n>CHARACTERISTICS_TITLE}" showNavButton="{device>/isPhone}"
		navButtonPress="navBack">
		<content>

			<Table id="idCharTable" inset="false" mode="Delete" delete="handleDelete"
				items="{
      path: '/vendorsList/0/Characteristics',
      sorter: {
        path: 'REGXT'
      }
    }">
				<headerToolbar>
					<Toolbar>
						<Title text="Your Characteristics" level="H2" />
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column width="12em">
						<Text text="Characteristics" />
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Value" />
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<Text text="{DESCR}" />
							<Input value="{VALUE}" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
		<footer>
			<Bar>
				<contentRight>
					<Button id="btnSave" text="Save" icon="sap-icon://save" press="handleSave"></Button>
					<Button text="Add" icon="sap-icon://add" press="addCharacteristics"></Button>
				</contentRight>
			</Bar>
		</footer>
	</Page>

</mvc:View>