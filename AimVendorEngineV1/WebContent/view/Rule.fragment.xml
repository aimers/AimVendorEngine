<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<l:Grid defaultSpan="L12 M12 S12" width="auto">
		<l:content>
			<f:SimpleForm id="rulesForm" minWidth="1024"
        maxContainerCols="2"
				layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4"
				emptySpanL="1" emptySpanM="1" columnsL="1" columnsM="1">
				<f:content>
					<core:Title text="Rule Details"></core:Title>
					<Label text="Rule Name" />
					<Input value="{DESCR}" />
					<Label text="Day Start Time" />
					<Input value="{DSTIM}" />
					<Label text="Day End Time" />
					<Input value="{DETIM}" />
					<Label text="Start Time Slot" />
					<Input value="{OSTSL}" />
					<Label text="End Time Slot" />
					<Input value="{OETSL}" />
					<Label text="Days" />
					<Input value="{DAYS}" />
					<Label text="Rule Type" />
					<Select id="ruleType" selectedKey="{RULID}">
						<core:Item key="1" text="Auto Approval" />
						<core:Item key="2" text="Manual Approval" />
						<core:Item key="3" text="Receieve Call" />
					</Select>
					<core:Title text="Activation Details"></core:Title>
					<Label text="Activation Date" />
					<Input value="{}" />
					<Label text="Valid From" />
					<Input value="{}" />
					<Label text="Valid To" />
					<Input value="{}" />

				</f:content>
			</f:SimpleForm>
		</l:content>
	</l:Grid>
</core:FragmentDefinition>