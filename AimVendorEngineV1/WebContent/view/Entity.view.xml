<mvc:View controllerName="sap.ui.medApp.view.Entity" xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<Page id="entity" title="{i18n>ENTITY_TITLE}">
		<content>
			<List id="entityList" items="{/ProductCollection}" mode="Delete"
				delete="handleDelete" includeItemInSelection="true">
				<headerToolbar>
					<Toolbar>
						<content>
							<Title text="{i18n>VENDOR_ENTITY}" level="H2" />
							<ToolbarSpacer />

						</content>
					</Toolbar>
				</headerToolbar>
				<StandardListItem title="{Name}" description="{ProductId}"
					icon="{ProductPicUrl}" iconDensityAware="false" iconInset="false" />
			</List>
		</content>
		<footer>
			<Bar>
				<contentRight>
					<Button text="Add" icon="sap-icon://add" press="handleAddEntity"></Button>
				</contentRight>
			</Bar>
		</footer>
	</Page>
</mvc:View>