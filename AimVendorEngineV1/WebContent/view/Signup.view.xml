<mvc:View xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core"
	xmlns="sap.m" controllerName="sap.ui.medApp.view.Signup" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Login" showHeader="false">
		<content>
			<VBox width="100%" alignItems="Center">
				<l:Grid defaultSpan="L12 M12 S12" width="auto">
					<f:SimpleForm id="SimpleFormChange354" minWidth="300"
						maxContainerCols="2" editable="true" layout="ResponsiveGridLayout"
						title="Sign Up" columnsL="1" columnsM="1" class="editableForm">
						<f:content>
							<Text id="MessageBox" class="errormessage" visible="false">
								<layoutData>
									<l:GridData span="L12 M12 S12" />
								</layoutData>
							</Text>
							<Text class="greenTitle" text="All fields are mandatory.">
								<layoutData>
									<l:GridData span="L12 M12 S12" />
								</layoutData>
							</Text>
							<Text class="greenTitle"
								text="Kindly check your email account for system generated password.">
								<layoutData>
									<l:GridData span="L12 M12 S12" />
								</layoutData>
							</Text>
							<Label text="First Name" />
							<Input id="fname" valueStateText="First name is required" />
							<Label text="Last Name" />
							<Input id="lname" valueStateText="Last name is required" />
							<Label text="Username" />
							<Input id="usrNme" placeholder="email as username"
								valueStateText="Username is required" />
							<!-- <Label text="Password" /> <Input id="pswd" type="Password" valueStateText="Password 
								is required. It should match with Confirm Password."> </Input> <Label text="Confirm 
								Password" /> <Input id="cpswd" type="Password" valueStateText="Confirm Password 
								is required. It should match with Password."> </Input> -->
							<Label text="Speciality" />
							<Select id="entitySelect" items="{path: '/allCategory'}">
								<core:Item key="{ENTID}" text="{DESCR}" />
							</Select>
							<Button class="sapUiMediumMarginTop" text="Sign Up" type="Emphasized" press="handleRegister">
								<layoutData>
									<l:GridData span="L12 M12 S12" />
								</layoutData>
							</Button>
							<Button text="Cancel" press="handleCancel">
								<layoutData>
									<l:GridData span="L12 M12 S12" />
								</layoutData>
							</Button>
						</f:content>
					</f:SimpleForm>
				</l:Grid>
			</VBox>
		</content>
	</Page>
</mvc:View>