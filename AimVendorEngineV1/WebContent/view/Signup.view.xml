<mvc:View xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core"
	xmlns="sap.m" controllerName="sap.ui.medApp.view.Signup" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Login" showHeader="false">
		<content>
			<l:Grid defaultSpan="L6 M6 S12" width="100%" position="Center" class="sapUiSmallMarginTop">
				<l:content>
					<f:SimpleForm id="frmUserSignup" minWidth="1024"
						maxContainerCols="2" editable="true" layout="ResponsiveGridLayout"
						title="SignUp with User" labelSpanL="4" labelSpanM="4" emptySpanL="0"
						emptySpanM="0" columnsL="2" columnsM="2">
						<f:content>
							 

							<Input id="username" placeholder="enter email as username">
								<layoutData>
									<l:GridData span="L12 M12 S12" />
								</layoutData>
							</Input>

							<Input id="password" type="Password" placeholder="enter password">
								<layoutData>
									<l:GridData span="L12 M12 S12" />
								</layoutData>
							</Input>

							<Input id="cpassword" type="Password" placeholder="confirm password">
								<layoutData>
									<l:GridData span="L12 M12 S12" />
								</layoutData>
							</Input>


							<Button text="Register" press="handleRegister" type="Emphasized">
								<layoutData>
									<l:GridData span="L6 M6 S6" />
								</layoutData>
							</Button>
							<Button text="Cancel" press="handleCancel"  >
								<layoutData>
									<l:GridData span="L6 M6 S6" />
								</layoutData>
							</Button>

						</f:content>
					</f:SimpleForm>
					<f:SimpleForm id="frmSocialSignup" minWidth="1024"
						maxContainerCols="2" editable="true" layout="ResponsiveGridLayout"
						title="Social SignUp" labelSpanL="4" labelSpanM="4" emptySpanL="0"
						emptySpanM="0" columnsL="2" columnsM="2">
						<f:content>
							<Button text="Facebook" class="facebookBtn">
								<layoutData>
									<l:GridData span="L12 M12 S12" />
								</layoutData>
							</Button>
							<Button text="Google+" class="googlePlusBtn">
								<layoutData>
									<l:GridData span="L12 M12 S12" />
								</layoutData>
							</Button>
							<Button text="Twitter" class="twitterBtn">
								<layoutData>
									<l:GridData span="L12 M12 S12" />
								</layoutData>
							</Button>
						</f:content>
					</f:SimpleForm>
				</l:content>
			</l:Grid>
		</content>
	</Page>
</mvc:View>