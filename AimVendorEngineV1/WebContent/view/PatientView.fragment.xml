			<Button text="Approve" press="handleApprovePress" />
		</beginButton>
		<endButton>
			<Button text="Reject" press="handleRejectPress" />
		</endButton>
		<content>
			<l:Grid defaultSpan="L6 M12 S12" width="auto">
				<l:content>
					<f:SimpleForm id="SimpleFormDisplay480"
