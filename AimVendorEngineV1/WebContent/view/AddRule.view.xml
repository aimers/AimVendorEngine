<mvc:View controllerName="sap.ui.medApp.view.AddRule" xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form" displayBlock="true" xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
	<Page id="home" title="{i18n>ADDRULE_TITLE}" showNavButton="{device>/isPhone}"
		navButtonPress="navBack">
		<content>
			<l:Grid defaultSpan="L12 M12 S12" width="auto">
				<l:content>
					<f:SimpleForm id="rulesForm" minWidth="1024"
						maxContainerCols="2" layout="ResponsiveGridLayout" labelSpanL="4"
						labelSpanM="4" emptySpanL="1" emptySpanM="1" columnsL="1"
						columnsM="1">
						<f:content>
							<core:Title text="Rule Details"></core:Title>
							<Label text="Speciality" />
							<Select id="entitySelect" items="{ path: '/vendorsList/0/Rules'}"
								change="onEntitySelect">
								<core:Item key="{ENTID}" text="{DESCR}" />
							</Select>

							<Label text="Rule Name" />
							<Input id="ipDescr" valueState="{/valueState}"
								valueStateText="Description is required" />
							<Label text="Day Start Time" />

							<DateTimeInput type="Time" id="dtiDstim"
								valueState="{/valueState}" change="onChangeDSTIMTime"
								valueStateText="Day start time is required" />

							<Label text="Day End Time" />
							<DateTimeInput type="Time" id="dtiDetim"
								valueState="{/valueState}" change="onChangeDETIMTime"
								valueStateText="Day end time is required" />

							<Label text="Start Time Slot" />
							<DateTimeInput type="Time" id="dtiOstsl"
								valueState="{/valueState}" change="onChangeOSTSLTime"
								valueStateText="Time slot start time is required" />

							<Label text="End Time Slot" />
							<DateTimeInput type="Time" id="dtiOestl"
								valueState="{/valueState}" change="onChangeOETSLTime"
								valueStateText="Time slot end time is required" />
							<Label text="Days" />
							<MultiComboBox id="daysCombo" selectionFinish="handleDaysSelectionFinish"
								valueState="{/valueState}">
								<core:Item key="1" text="Monday" />
								<core:Item key="2" text="Tuesday" />
								<core:Item key="3" text="Wednesday" />
								<core:Item key="4" text="Thursday" />
								<core:Item key="5" text="Friday" />
								<core:Item key="6" text="Saturday" />
								<core:Item key="7" text="Sunday" />
							</MultiComboBox>
							<Label text="Rule Type" />
							<Select id="ruleType" change="handleRuleTypeSelection">
								<core:Item key="1" text="Auto Approval" />
								<core:Item key="2" text="Manual Approval" />
								<core:Item key="3" text="Receieve Call" />
							</Select>
							<!-- <core:Title text="Activation Details"></core:Title> <Label text="Activation 
								Date" /> <Input value="{}" /> <Label text="Valid From" /> <Input value="{}" 
								/> <Label text="Valid To" /> <Input value="{}" /> -->
						</f:content>
					</f:SimpleForm>
				</l:content>
			</l:Grid>
		</content>
		<footer>
			<Bar>
				<contentRight>
					<Button text="Save" press="handleRuleSave"></Button>
					<Button text="Cancel" press="handleRuleCancel"></Button>
				</contentRight>
			</Bar>
		</footer>
	</Page>
</mvc:View>