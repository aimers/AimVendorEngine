<mvc:View controllerName="sap.ui.medApp.view.Booking"
	xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
	xmlns:c="sap.ui.core" xmlns="sap.m">
	<Page id="booking" title="{i18n>BOOKING_TITLE}" showNavButton="{device>isPhone}" navButtonPress="navBack">
		<content>
			<Table id="idBookings" inset="true" class="rightBlackBorder"
				items="{
			path: '/vendorRules'
			 
		}">

				<columns>
					<Column width="4em">
						<Text text="{i18n>Time}" />
					</Column>
					<Column>
						<Text text="{i18n>APPOINTMENTS}" />
					</Column>
					<Column width="3em">

					</Column>

				</columns>

				<headerToolbar>
					<Toolbar>
						<Title text="Appointment Date:" level="H2" />
						<Title id="dateTitle" level="H2" />
						<ToolbarSpacer></ToolbarSpacer>
						<Select change="handleEntityChange" id="entitySelect"
							items="{
            path: '/vendorsList/0/Rules',
            sorter: { path: 'ENTID' }
          }">
							<c:Item key="{ENTID}" text="{DESCR}" />
						</Select>

					</Toolbar>
				</headerToolbar>
				<items>
					<ColumnListItem>
						<cells>
							<Text text="{START}" />
							<l:Grid defaultSpan="L12 M12 S12" class="bookingGrid"
								content="{path: 'BOOKINGS'}">
								<l:content>
									<Button text="{TITLE}  {FRNAM}  {LTNAM}"  width="100%"/>
								</l:content>
							</l:Grid>
							<Button icon="sap-icon://add" visible="{path: 'BOOKINGS', formatter:'sap.ui.medApp.formatter.formatHelper.isBooked'}" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>